{
    "compilerOptions": {
        "outDir": "./dist",
        "jsx": "react-jsx",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "rootDir": "src",
        "module": "ESNext",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
    },
    "include": [
        "src"
    ]
}